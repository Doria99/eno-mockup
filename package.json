{
  "name": "eno-mockup",
  "version": "1.0.0",
  "type": "module",
  "main": "script.js",
  "scripts": {
    "test": "jest",
    "lint:js": "eslint *.js",
    "lint:css": "stylelint *.css",
    "lint:html": "htmlhint *.html",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "build": "npm run lint && npm run minify",
    "minify:js": "terser script.js -o script.min.js",
    "minify:css": "postcss styles.css -o styles.min.css",
    "minify": "npm run minify:js && npm run minify:css",
    "optimize-images": "imagemin images/* --out-dir=images/optimized",
    "optimize-svg": "svgo -f images --config=svgo.config.js",
    "dev": "browser-sync start --server --files \"*.html, *.css, *.js\"",
    "lighthouse": "lhci autorun --config=lighthouserc.js",
    "test:a11y": "axe --config=axe.config.js *.html",
    "analyze": "npm run lighthouse && npm run test:a11y",
    "build:full": "npm run lint && npm run minify && npm run optimize-images && npm run optimize-svg"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "eslint": "^9.27.0",
    "htmlhint": "^1.1.4",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-csso": "^6.0.1",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "terser": "^5.24.0"
  }
}
