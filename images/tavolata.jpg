<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 800" width="1200" height="800">
  <!-- Sfondo tavolo in legno -->
  <rect width="1200" height="800" fill="#8B4513" />
  
  <!-- Texture del tavolo -->
  <g opacity="0.7">
    <line x1="0" y1="50" x2="1200" y2="50" stroke="#6B3E26" stroke-width="2" />
    <line x1="0" y1="150" x2="1200" y2="150" stroke="#6B3E26" stroke-width="3" />
    <line x1="0" y1="250" x2="1200" y2="250" stroke="#6B3E26" stroke-width="2" />
    <line x1="0" y1="350" x2="1200" y2="350" stroke="#6B3E26" stroke-width="4" />
    <line x1="0" y1="450" x2="1200" y2="450" stroke="#6B3E26" stroke-width="2" />
    <line x1="0" y1="550" x2="1200" y2="550" stroke="#6B3E26" stroke-width="3" />
    <line x1="0" y1="650" x2="1200" y2="650" stroke="#6B3E26" stroke-width="2" />
    <line x1="0" y1="750" x2="1200" y2="750" stroke="#6B3E26" stroke-width="3" />
  </g>
  
  <!-- Piatto principale (bistecca) -->
  <circle cx="600" cy="400" r="150" fill="#A52A2A" />
  <path d="M500,350 Q600,300 700,350 Q750,400 700,450 Q600,500 500,450 Q450,400 500,350" fill="#8B0000" />
  
  <!-- Piatto di pasta -->
  <circle cx="300" cy="300" r="100" fill="#F5DEB3" />
  <g fill="#FFD700">
    <path d="M250,280 Q300,250 350,280 Q370,300 350,320 Q300,350 250,320 Q230,300 250,280" />
    <path d="M270,260 Q300,240 330,260 Q340,280 330,300 Q300,320 270,300 Q260,280 270,260" />
    <path d="M280,320 Q300,300 320,320 Q330,330 320,340 Q300,350 280,340 Q270,330 280,320" />
  </g>
  
  <!-- Bicchiere di vino rosso -->
  <path d="M800,250 L850,250 L840,350 L810,350 Z" fill="#8B0000" opacity="0.8" />
  <path d="M795,250 L855,250 L845,350 L805,350 Z" fill="none" stroke="#FFFFFF" stroke-width="2" opacity="0.5" />
  
  <!-- Bottiglia di Chianti -->
  <rect x="900" y="200" width="40" height="150" rx="5" fill="#2E0000" />
  <rect x="910" y="180" width="20" height="20" fill="#2E0000" />
  <path d="M900,250 L940,250" stroke="#F5F5DC" stroke-width="2" />
  <path d="M900,260 L940,260" stroke="#F5F5DC" stroke-width="2" />
  <path d="M900,270 L940,270" stroke="#F5F5DC" stroke-width="2" />
  
  <!-- Pane toscano -->
  <ellipse cx="450" cy="500" rx="80" ry="50" fill="#D2B48C" />
  <ellipse cx="450" cy="500" rx="70" ry="40" fill="#DEB887" />
  <path d="M420,480 L480,480" stroke="#A0522D" stroke-width="2" />
  <path d="M410,500 L490,500" stroke="#A0522D" stroke-width="2" />
  <path d="M420,520 L480,520" stroke="#A0522D" stroke-width="2" />
  
  <!-- Piatto di antipasti -->
  <circle cx="750" cy="500" r="100" fill="#F5F5DC" />
  <ellipse cx="700" cy="480" rx="30" ry="20" fill="#FF6347" /> <!-- Pomodoro -->
  <ellipse cx="750" cy="460" rx="25" ry="15" fill="#228B22" /> <!-- Olive -->
  <rect x="780" y="470" width="60" height="30" rx="5" fill="#CD5C5C" /> <!-- Prosciutto -->
  <circle cx="730" cy="520" r="25" fill="#F0E68C" /> <!-- Formaggio -->
  
  <!-- Tovaglia -->
  <rect x="0" y="0" width="1200" height="800" fill="url(#tovaglia)" opacity="0.1" />
  
  <!-- Pattern tovaglia -->
  <defs>
    <pattern id="tovaglia" patternUnits="userSpaceOnUse" width="100" height="100">
      <rect width="50" height="50" fill="#FFFFFF" />
      <rect x="50" y="0" width="50" height="50" fill="#F5F5DC" />
      <rect x="0" y="50" width="50" height="50" fill="#F5F5DC" />
      <rect x="50" y="50" width="50" height="50" fill="#FFFFFF" />
    </pattern>
  </defs>
  
  <!-- Overlay per effetto fotografico -->
  <rect width="1200" height="800" fill="#000000" opacity="0.2" />
  
  <!-- Testo sovrapposto -->
  <text x="600" y="100" font-family="serif" font-size="80" font-weight="bold" text-anchor="middle" fill="#FFFFFF" stroke="#8B0000" stroke-width="2">Osteria del Chianti</text>
  <text x="600" y="150" font-family="serif" font-size="30" text-anchor="middle" fill="#FFFFFF">Tradizione Toscana dal 1965</text>
</svg>